{
    "default": {
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "publishQuiet": false,
        "dryRun": false,
        "paths": [
            "src/tests/Features/"
        ],
        "require": [
            "src/tests/Steps/*.ts",
            "src/tests/Hooks/hooks.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "progress-bar",
            "html:test-results/cucumber-report.html",
            "json:test-results/cucumber-report.json"
        ]
    }
}